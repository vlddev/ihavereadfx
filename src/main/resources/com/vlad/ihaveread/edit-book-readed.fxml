<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefWidth="550">

    <content>
        <GridPane hgap="5" vgap="5">

            <Label text="Read lang" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="tfReadLang" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.fillWidth="false"/>

            <Label text="Read date" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="tfReadDate" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.fillWidth="false"/>

            <Label text="Medium" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="tfMedium" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.fillWidth="false"/>

            <Label text="Score" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="tfScore" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.fillWidth="false"/>

            <Label text="Note" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextArea fx:id="taNote" prefHeight="100" prefWidth="440" wrapText="true"
                      GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.fillWidth="true"/>

            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType fx:id="btnCreate" text="Create" buttonData="OK_DONE"/>
        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>

</DialogPane>